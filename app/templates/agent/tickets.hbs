<div class="tickets-container">
  <div class="tickets-header">
    <h2>All Support Tickets</h2>
    <div class="filter-controls">
      <select {{on "change" this.changeStatusFilter}}>
        <option value="ALL" selected={{eq this.statusFilter "ALL"}}>All Statuses</option>
        <option value="OPEN" selected={{eq this.statusFilter "OPEN"}}>Open</option>
        <option value="IN_PROGRESS" selected={{eq this.statusFilter "IN_PROGRESS"}}>In Progress</option>
        <option value="RESOLVED" selected={{eq this.statusFilter "RESOLVED"}}>Resolved</option>
        <option value="CLOSED" selected={{eq this.statusFilter "CLOSED"}}>Closed</option>
      </select>
      
      <button {{on "click" this.refreshTickets}} class="btn-refresh">
        <i class="fas fa-sync-alt"></i> Refresh
      </button>
      
      <div class="export-container">
        <button {{on "click" this.downloadTicketsCsv}} class="btn-export" disabled={{this.isLoading}}>
          {{#if this.isLoading}}
            <i class="fas fa-spinner fa-spin"></i> Generating...
          {{else}}
            <i class="fas fa-file-download"></i> Export Closed Tickets (Last 90 Days)
          {{/if}}
        </button>
        {{#if this.downloadError}}
          <div class="download-error">
            <i class="fas fa-exclamation-circle"></i> {{this.downloadError}}
            <button {{on "click" this.retryDownload}} class="btn-retry">
              <i class="fas fa-sync-alt"></i> Retry
            </button>
          </div>
        {{/if}}
        <div class="tooltip">
          <i class="fas fa-info-circle"></i>
          <span class="tooltip-text">Exports closed tickets from the last 90 days in CSV format. The backend may take a moment to generate the file.</span>
        </div>
      </div>
    </div>
  </div>

  {{#if this.isLoading}}
    <div class="loading-spinner">
      <i class="fas fa-spinner fa-spin"></i> Loading tickets...
    </div>
  {{else}}
    <div style="margin-bottom: 1.5rem;">
      <h2>My Assigned Tickets</h2>
      {{#if this.assignedTickets.length}}
        <div class="tickets-list">
          {{#each this.assignedTickets as |ticket|}}
            <div class="tickets-grid ticket-row {{ticket.status}}">
              <div class="ticket-id">{{ticket.id}}</div>
              <div class="ticket-subject">{{ticket.subject}}</div>
              <div class="ticket-customer">{{ticket.customer.name}}</div>
              <div class="ticket-status">
                <span class="status-badge {{ticket.status}}">{{ticket.status}}</span>
              </div>
              <div class="ticket-date">{{format-date ticket.createdAt}}</div>
              <div class="ticket-actions">
                {{!-- Show Assign to Me for any unassigned ticket --}}
                {{#if (not ticket.agent)}}
                  <button class="btn-assign" {{on "click" (fn this.assignTicket ticket.id)}}>
                    Assign to Me
                  </button>
                {{/if}}
                <LinkTo @route="agent.ticket" @model={{ticket.id}} class="btn-view">
                  <i class="fas fa-eye"></i> View
                </LinkTo>
              </div>
            </div>
          {{/each}}
        </div>
      {{else}}
        <div class="empty-state">
          <div class="empty-state-icon">
            <i class="fas fa-ticket-alt"></i>
          </div>
          <h3>No assigned tickets</h3>
          <p>You have not been assigned any tickets yet.</p>
        </div>
      {{/if}}
    </div>

    <div style="margin-bottom: 1.5rem;">
      <h2>Unassigned Tickets</h2>
      {{#if this.unassignedTickets.length}}
        <div class="tickets-list">
          {{#each this.unassignedTickets as |ticket|}}
            <div class="tickets-grid ticket-row {{ticket.status}}">
              <div class="ticket-id">{{ticket.id}}</div>
              <div class="ticket-subject">{{ticket.subject}}</div>
              <div class="ticket-customer">{{ticket.customer.name}}</div>
              <div class="ticket-status">
                <span class="status-badge {{ticket.status}}">{{ticket.status}}</span>
              </div>
              <div class="ticket-date">{{format-date ticket.createdAt}}</div>
              <div class="ticket-actions">
                {{!-- Show Assign to Me for any unassigned ticket --}}
                {{#if (not ticket.agent)}}
                  <button class="btn-assign" {{on "click" (fn this.assignTicket ticket.id)}}>
                    Assign to Me
                  </button>
                {{/if}}
                <LinkTo @route="agent.ticket" @model={{ticket.id}} class="btn-view">
                  <i class="fas fa-eye"></i> View
                </LinkTo>
              </div>
            </div>
          {{/each}}
        </div>
      {{else}}
        <div class="empty-state">
          <div class="empty-state-icon">
            <i class="fas fa-ticket-alt"></i>
          </div>
          <h3>No unassigned tickets</h3>
          <p>There are no unassigned tickets at the moment.</p>
        </div>
      {{/if}}
    </div>

    {{#if this.filteredTickets.length}}
      <div class="tickets-list">
        <div class="tickets-grid tickets-grid-header">
          <div class="ticket-id">ID</div>
          <div class="ticket-subject">Subject</div>
          <div class="ticket-customer">Customer</div>
          <div class="ticket-status">Status</div>
          <div class="ticket-date">Created</div>
          <div class="ticket-actions">Actions</div>
        </div>
        
        {{#each this.filteredTickets as |ticket|}}
          <div class="tickets-grid ticket-row {{ticket.status}}">
            <div class="ticket-id">{{ticket.id}}</div>
            <div class="ticket-subject">{{ticket.subject}}</div>
            <div class="ticket-customer">{{ticket.customer.name}}</div>
            <div class="ticket-status">
              <span class="status-badge {{ticket.status}}">{{ticket.status}}</span>
            </div>
            <div class="ticket-date">{{format-date ticket.createdAt}}</div>
            <div class="ticket-actions">
              {{!-- Show Assign to Me for any unassigned ticket --}}
              {{#if (not ticket.agent)}}
                <button class="btn-assign" {{on "click" (fn this.assignTicket ticket.id)}}>
                  Assign to Me
                </button>
              {{/if}}
              <LinkTo @route="agent.ticket" @model={{ticket.id}} class="btn-view">
                <i class="fas fa-eye"></i> View
              </LinkTo>
            </div>
          </div>
        {{/each}}
      </div>
    {{else}}
      <div class="empty-state">
        <div class="empty-state-icon">
          <i class="fas fa-ticket-alt"></i>
        </div>
        <h3>No tickets found</h3>
        <p>There are no tickets matching your filters.</p>
      </div>
    {{/if}}
  {{/if}}
</div>
