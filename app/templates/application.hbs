{{page-title "Support Ticketing System"}}

<div class="app-container">
  <header class="navbar">
    <div class="navbar-container">
      <div class="navbar-brand">
        <a href="/" class="logo">Support Ticketing</a>
      </div>
      
      <nav class="navbar-menu">
        {{#if this.session.isAuthenticated}}
          {{#if this.session.isAgent}}
            <LinkTo @route="agent.dashboard" class="nav-item">Dashboard</LinkTo>
            <LinkTo @route="agent.tickets" class="nav-item">Tickets</LinkTo>
          {{else}}
            <LinkTo @route="customer.tickets" class="nav-item">My Tickets</LinkTo>
            <LinkTo @route="customer.new-ticket" class="nav-item">New Ticket</LinkTo>
          {{/if}}
          <button class="nav-item btn-logout" {{on "click" this.logout}}>Logout</button>
        {{else}}
          <LinkTo @route="login" class="nav-item btn-login">Login</LinkTo>
          <LinkTo @route="register" class="nav-item btn-signup">Sign Up</LinkTo>
        {{/if}}
      </nav>
    </div>
  </header>

  <main>
    {{outlet}}
  </main>

  <footer class="footer">
    <div class="container">
      <p>Â© {{this.currentYear}} Support Ticketing System</p>
    </div>
  </footer>
</div>